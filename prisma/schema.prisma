generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Vendor {
  id       String  @id @default(uuid())
  name     String  @unique
  email    String  @unique
  password String
  staff    Staff[]

  @@map("vendors")
}

model Staff {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  position String
  password String
  vendor   Vendor @relation(fields: [vendorId], references: [id])
  vendorId String

  @@map("staff")
}